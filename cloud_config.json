{
  "common": {
    "os_version": "orcl10",
    "ssh_user": "opc",
    "ssh_key_name": "cloud_onehour_project",
    "ssh_key_path": "${HOME}/.ssh/cloud_onehour_project.pem",
    "debian_setup": [
      "sudo apt-get -y update > /tmp/apt_update.log 2>&1",
      "sudo apt-get -y install git curl python3 python3-pip > /tmp/apt_install.log 2>&1",
      "[ -d ~/cloud_onehour/.git ] || git clone https://github.com/SuminoeRabbits/cloud_onehour.git ~/cloud_onehour > /tmp/git_clone.log 2>&1",
      "cd ~/cloud_onehour/scripts && ./prepare_tools.sh > /tmp/prepare_tools.log 2>&1"
    ],
    "fedra_setup": [
      "sudo dnf -y update > /tmp/dnf_update.log 2>&1",
      "sudo dnf -y install git curl python3 python3-pip > /tmp/dnf_install.log 2>&1",
      "[ -d ~/cloud_onehour/.git ] || git clone https://github.com/SuminoeRabbits/cloud_onehour.git ~/cloud_onehour > /tmp/git_clone.log 2>&1",
      "cd ~/cloud_onehour/scripts_rhel9 && ./prepare_tools.sh > /tmp/prepare_tools.log 2>&1"
    ],
    "workloads": [
      "cd ~/cloud_onehour && ./pts_runner/pts_runner_ffmpeg-7.0.1.py 8 --quick > /tmp/pts_runner_ffmpeg.log 2>&1",
      "cd ~/cloud_onehour && ./pts_runner/pts_runner_ffmpeg-7.0.1.py 12 --quick >> /tmp/pts_runner_ffmpeg.log 2>&1",
      "cd ~/cloud_onehour && ./pts_runner/pts_runner_ffmpeg-7.0.1.py 288 --quick >> /tmp/pts_runner_ffmpeg.log 2>&1",
      "cd ~/cloud_onehour/results && ./pts_runner_postmortem.py > /tmp/pts_runner_postmortem.log 2>&1",
      "cd ~/cloud_onehour/results && ./make_one_big_json.py > /tmp/make_one_big_json.log 2>&1"
    ],
    "cloud_reports_dir": "~/cloud_onehour/results",
    "host_reports_dir": "bench_results",
    "security_group_name": "cloud-benchmarking-sg",
    "ssh_timeout": 20,
    "workload_timeout": 9000,
    "ssh_strict_host_key_checking": false,
    "debug_stdout": true,
    "long_running_indicators": [
      "pts_regression.py",
      "benchmark",
      "phoronix-test-suite",
      "pts_runner"
    ]
  },
  "instance_definitions_file": "cloud_instances.json"
}