{
  "common": {
    "os_version": "25.04",
    "ssh_user": "ubuntu",
    "ssh_key_name": "cloud_onehour_project",
    "ssh_key_path": "${HOME}/.ssh/cloud_onehour_project.pem",
    "commands": [
      "sudo apt-get -y update && sudo apt-get install -y git",
      "git clone https://github.com/SuminoeRabbits/cloud_onehour.git",
      "cd ~/cloud_onehour/scripts && ./prepare_tools.sh",
      "cd ~/cloud_onehour/pts_runner && pts_runner_build-gcc-1.5.0.py",
      "cd ~/cloud_onehour/pts_runner && pts_runner_build-llvm-1.6.0.py"
    ],
    "cloud_reports_dir": "~/cloud_onehour/reports",
    "host_reports_dir": "bench_results",
    "security_group_name": "cloud-benchmarking-sg",
    "ssh_timeout": 20,
    "command_timeout": 10800,
    "ssh_strict_host_key_checking": false,
    "debug_stdout": true
  },
  "aws": {
    "enable": true,
    "region": "ap-northeast-1",
    "instances": [
      {
        "name": "aws-benchmark-instance",
        "type": "t3.medium",
        "arch": "amd64",
        "hostname": "aws-t3-medium-amd64",
        "vcpus": 2,
        "enable": true
      }
    ]
  },
  "gcp": {
    "enable": false,
    "project_id": "AUTO_DETECT",
    "zone": "asia-northeast1-a",
    "instances": [
      {
        "name": "gcp-benchmark-instance",
        "type": "e2-medium",
        "arch": "amd64",
        "hostname": "gcp-e2-medium-amd64",
        "vcpus": 2,
        "enable": true
      }
    ]
  },
  "oci": {
    "enable": false,
    "compartment_id": "ocid1.compartment.oc1...",
    "region": "ap-tokyo-1",
    "instances": [
      {
        "name": "oci-benchmark-instance",
        "type": "VM.Standard.E4.Flex",
        "arch": "amd64",
        "hostname": "oci-vm-standard-e4-flex-amd64",
        "vcpus": 2,
        "enable": false
      }
    ]
  }
}
